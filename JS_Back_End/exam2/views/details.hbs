<section id="details-info">
    <h1>Details</h1>

{{#with volcano}}
    <div class="volcano-image">
        <img src="{{image}}" alt="">
    </div>

    <div class="volcano-info">
        <div class="volcano-text">
            <h1 id="name">{{name}}</h1>
            <h3 id="location">Location: {{location}}</h3>
            <p id="type">Volcano Type: {{typeVolcano}}</p>
            <p id="elevation"><span>Elevation: {{elevation}}m</span></p>
            <p id="last-eruption">Year of Last Eruption: {{lastEruption}}</p>
            <p id="votes">Vote's Count: {{votes}}</p>
            <p id="description">{{description}}</p>
        </div>


    {{#if hasUser}}
        <div class="product-btn">
            {{#if isAuthor}}
                <div class="author">
                    <a href="/edit/{{_id}}" class="btn-edit">Edit</a>
                    <a href="/delete/{{_id}}" class="btn-delete">Delete</a>
                </div>
            {{else}}

                {{#if hasVoted}}
                    <p class="vote-message">You've already voted for this volcano!</p>
                {{else}}
                    <a href="/vote/{{_id}}" class="btn-vote">Vote</a>
                {{/if}}

            {{/if}}
        </div>
    </div>
    {{/if}}
{{/with}}
</section>
